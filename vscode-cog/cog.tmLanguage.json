{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Cog",
    "scopeName": "source.cog",
    "fileTypes": [
        "cog",
        "cogs"
    ],
    "patterns": [
        {
            "name": "keyword.control.cog",
            "match": "\\b(break|continue|if|else|return|while)\\b"
        },
        {
            "name": "keyword.regular.cog",
            "match": "\\b(as|const|enum|extern|false|func|include|null|sizeof|struct|true|var)\\b"
        },
        {
            "name": "comment.line.cog",
            "match": "//.*$"
        },
        {
            "name": "constant.numeric.cog",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "string.quoted.cog",
            "begin": "(\"|\\')",
            "end": "\\1",
            "patterns": [
                {
                    "name": "constant.character.escape.cog",
                    "match": "\\\\."
                }
            ]
        },
        {
            "name": "entity.name.function",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        },
        {
            "name": "variable.other.cog",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
    ]
}
