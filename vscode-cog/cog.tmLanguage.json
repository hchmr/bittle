{
    "name": "MyLanguage",
    "scopeName": "source.cog",
    "fileTypes": [
        "cog"
    ],
    "patterns": [
        {
            "name": "keyword.cog",
            "match": "\\b(as|const|else|enum|extern|false|func|if|null|return|sizeof|struct|true|var|while)\\b"
        },
        {
            "name": "comment.line.cog",
            "match": "//.*$"
        },
        {
            "name": "constant.numeric.cog",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "string.quoted.cog",
            "begin": "(\"|\\')",
            "end": "\\1",
            "patterns": [
                {
                    "name": "constant.character.escape.cog",
                    "match": "\\\\."
                }
            ]
        },
        {
            "name": "variable.other.cog",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
    ]
}