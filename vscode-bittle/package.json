{
    "name": "vscode-bittle",
    "displayName": "Bittle",
    "description": "Bittle language support for Visual Studio Code",
    "icon": "icon.png",
    "version": "0.0.1",
    "publisher": "anon",
    "scripts": {
        "vscode:prepublish": "npm run build",
        "vscode:package": "vsce package --allow-missing-repository --skip-license",
        "source-gen": "tsx ./src/prebuild.ts",
        "source-gen:watch": "chokidar --initial 'src/**/*.ts' '!src/syntax/generated.ts' -c 'npm run source-gen'",
        "tsc:build": "tsc -p ./",
        "tsc:watch": "tsc -watch -p ./",
        "build": "npm run source-gen && npm run tsc:build",
        "watch": "concurrently \"npm run source-gen:watch\" \"npm run tsc:watch\"",
        "test": "vitest",
        "lint": "eslint . --max-warnings 0"
    },
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "bittle",
                "aliases": [
                    "Bittle",
                    "bittle"
                ],
                "extensions": [
                    ".btl",
                    ".btls"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bittle",
                "scopeName": "source.btl",
                "path": "./bittle.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Bittle",
            "properties": {
                "bittle.compilerPath": {
                    "type": "string",
                    "default": "bittlec",
                    "description": "Path to compiler executable"
                },
                "bittle.exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Files and folders to exclude"
                }
            }
        }
    },
    "dependencies": {
        "fuzzysort": "^3.1.0",
        "minimatch": "^10.0.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@stylistic/eslint-plugin": "^5.2.3",
        "@types/node": "^24.3.0",
        "@types/vscode": "^1.103.0",
        "@vscode/vsce": "^3.6.0",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.2.0",
        "eslint": "^9.34.0",
        "eslint-plugin-only-warn": "^1.1.0",
        "globals": "^16.3.0",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.40.0",
        "vitest": "^3.2.4"
    }
}
